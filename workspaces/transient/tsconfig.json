{
  "extends": "@tsconfig/node12",
  "include": ["compiler.ts", "compiler.test.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": true,
    "noImplicitAny": true
  }
}
